<%= render :partial => "years", :locals => { :year => @year, :all_years => @all_years } %>
<% @posts.each do |post| %>

	<div class="post">
		<div class="title">
			<%= post.title %>
		</div>
		<div class="timestamp">
			<%= l post.created_at.in_time_zone("Pacific Time (US & Canada)"), :format => :blog_post %>
		</div>
		<div class="body">
			<%= simple_format post.body %>
		</div>

		<% @comment.errors.full_messages.each do |msg| %>
	      <div class="comment_form_error"><%= msg %></div>
	    <% end %>

		<div class="comment_form">
			<%= form_for [post, @comment] do |f| %>
				<%= f.label :comment, 'Note' %>:
				<%= f.text_area :comment %><br />
			 	<%= f.label :name, 'Name' %>:
				<%= f.text_field :name %><br />
			 	<%= f.label :website, 'Website' %>:
				<%= f.text_field :website %><br />
				<%= f.submit 'Make a note' %>
			<% end %>
		</div>
		<div class="comments_zippy">
			<span class="comment_count"><%= post.comments.chronological.count %> notes on this post.</span>
			<% post.comments.chronological.each do |comment| %>
				<dic class="comment">
					<div class="name">
						<%= get_commentor_name comment %>
					</div>
					<div class="body">
						<%= simple_format comment.comment %>
					</div>
				</div>
			<% end %>
		<div>
	</div>
<% end %>