<div class="captioned_image">
	<%= image_tag(the_image.image.regular.url, :alt => the_image.name) %>
	<div class="image_caption">
		<span class="name"><%= the_image.name %></span><%= ".  " unless the_image.name.blank? %>
		<span class="author"><%= the_image.author %></span><%= ".  " unless the_image.author.blank? %>
		<span class="date"><%= l the_image.date, :format => :image unless the_image.date.blank? %></span><%= ".  " unless the_image.date.nil? %>
		<%= tag 'br' unless the_image.info.nil? %><span class="info"><%= the_image.info %></span>
	</div>
</div>
